# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=0
ALLOWED_HOSTS=your-domain.herokuapp.com
ENV=production

# Database (automatically provided by Heroku)
# DATABASE_URL will be automatically set by Heroku Postgres add-on

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
EMAIL_HOST=smtp.resend.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=resend

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_TIMEOUT_S=30
USE_MOCK_OPENAI=false

# CORS and Security
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com

# Billing Configuration
COST_PER_REQUEST_CENTS=100

# Image Storage Settings
SAVE_REQUEST_IMAGES=false
MAX_SAVED_IMAGE_SIZE_MB=10
IMAGE_RETENTION_DAYS=30

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
DJANGO_LOG_LEVEL=INFO
